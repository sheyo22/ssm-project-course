<script type="text/javascript">

	$(function(){
		$(".time").datetimepicker({
			minView: "month",
			language:  'zh-CN',
			format: 'yyyy-mm-dd',
			autoclose: true,
			todayBtn: true,
			pickerPosition: "bottom-left"
		});
		$("#addBtn").click(function () {
			$.ajax({
				url: "workbench/clue/getUserList.do",
				dataType:"json",
				success: function (data) {
					$("#create-owner").val("");
					$("#create-company").val("");
					$("#create-surname").val("");
					$("#create-job").val("");
					$("#create-email").val("");
